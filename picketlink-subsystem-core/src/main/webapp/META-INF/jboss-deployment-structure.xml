<?xml version='1.0' encoding='UTF-8'?>
<jboss-deployment-structure xmlns="urn:jboss:deployment-structure:1.1">
  <deployment>
    <dependencies>
      <!-- You need to declare this dependency to let the PicketLink Subsystem configure your deployment -->
      <module name="org.picketlink.core"/>
      <!-- As we're using a JPA-based IDM configuration using the simple schema, we need to declare this dependency as well -->
      <module name="org.picketlink.idm.schema"/>
    </dependencies>
  </deployment>
</jboss-deployment-structure>
